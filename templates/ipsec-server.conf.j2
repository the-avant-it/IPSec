{% for server in ipsec.server %}
conn ipsec-{{ server }}
        keyexchange=ikev2
        type=tunnel
        authby=secret
        rekey=no
        keyingtries=2
        left=%any
        right=%any
        leftsubnet="{{ ipsec.server[server].leftsubnet }}"
        rightsubnet="{{ ipsec.server[server].rightsubnet }}"
        auto=add
        fragmentation=yes
{% endfor %}