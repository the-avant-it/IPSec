{% for server in {{ ipsec.server}} %}
conn ipsec-{{ server.key }}
        keyexchange=ikev2
        type=tunnel
        authby=secret
        rekey=no
        keyingtries=2
        left=%any
        right=%any
        leftsubnet="{{ server.leftsubnet }}"
        rightsubnet="{{ server.rightsubnet }}"
        auto=add
        fragmentation=yes
{% endfor %}